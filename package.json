{
  "name": "mcp-typescript-server",
  "version": "1.0.1",
  "description": "MCP server for TypeScript compilation and type checking",
  "keywords": ["mcp", "typescript", "compiler", "claude", "ai", "model-context-protocol"],
  "homepage": "https://github.com/umutc/mcp-typescript#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/umutc/mcp-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/umutc/mcp-typescript/issues"
  },
  "license": "MIT",
  "author": {
    "name": "MCP Contributors"
  },
  "main": "dist/index.js",
  "bin": {
    "mcp-typescript-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "typescript": "^5.3.0",
    "chokidar": "^3.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}